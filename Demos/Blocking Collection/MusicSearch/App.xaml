<?xml version="1.0" encoding="UTF-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="MusicSearch.App">

    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="ButtonBackgroundColor">#3498DB</Color>
            <Color x:Key="ButtonForegroundColor">White</Color>

            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource ButtonBackgroundColor}" />
                <Setter Property="TextColor" Value="{StaticResource ButtonForegroundColor}" />
                <Setter Property="BorderRadius" Value="5" />
            </Style>

            <Style TargetType="Label">
                <Setter Property="VerticalTextAlignment" Value="Center" />
            </Style>

          <ItemTappedValueConverter xmlns="clr-namespace:MusicSearch.Converters" x:Key="itemTappedConverter" />
          
        </ResourceDictionary>
    </Application.Resources>

</Application>
